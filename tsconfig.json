{
  "compilerOptions": {
    "baseUrl": ".",
    "isolatedModules": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "removeComments": true,
    "declaration": true, 
    "noImplicitAny": false, 
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "lib/**/*.ts", "lib/**/*.d.ts"],
  "references": []
}
